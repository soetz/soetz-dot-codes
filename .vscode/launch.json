  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run dev in Edge",
      "type": "edge",
      "version": "dev",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "preLaunchTask": "npm: dev",
      "postDebugTask": "terminate tasks"
    },
    {
      "name": "Run dev in Firefox",
      "type": "firefox",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "preLaunchTask": "npm: dev",
      "postDebugTask": "terminate tasks"
    }
  ]
}
